<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="#000000" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@drawable/setting_shadow_title" />

            <ImageView
                android:id="@+id/iv_back_huodngxiangqing"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/top_view_text"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="活动详情"
                android:textColor="#fff"
                android:textSize="20sp" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp" >

        <TextView
            android:id="@+id/tv_title_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="22dp"
            android:text="活动标题"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title_ac"
            android:layout_below="@+id/tv_title_ac"
            android:layout_marginTop="19dp"
            android:text="15-06-25" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="15dp"
            android:background="#DCDCDC" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/tv_content_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:text="活动详情"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>
