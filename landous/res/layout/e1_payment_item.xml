<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_shop_name"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:src="@drawable/icon_title_payment" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical|left"
            android:text="骆驼女鞋旗舰店"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color_line_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_app" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="80dp"
                android:layout_marginTop="10dp"
                android:text="商品标题：1234测试数据"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:text="￥290.00"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="x1"
                    android:textColor="#000" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gone"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F5F5F5"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#fff" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_all_num"
                    android:layout_width="80dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="共2件商品"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="合计￥ 574.00"
                    android:textColor="#000"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:gravity="center|right"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_gray" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/img_cancelorder_true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>