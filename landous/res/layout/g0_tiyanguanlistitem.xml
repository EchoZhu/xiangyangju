<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="92dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_activity_pic"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/huodongliebiaotu" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
		<View 
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="0.23"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="向阳居生活美学课堂第十二期"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_activity_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="向阳居生活美学课堂第十二期时间七月五日下午2:30到5:00"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商店名称"
                android:visibility="gone"
                android:textColor="#AAAAAA" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/tyg_phone" />

        </RelativeLayout>
    </LinearLayout>

  
<View android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:background="#f7f7f7"/>
</LinearLayout>