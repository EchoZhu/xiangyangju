<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:src="@drawable/icon_title_payment" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp" >

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="75dp"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            android:src="@drawable/ic_app" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="80dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:text="商品标题：1234测试数据"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="bottom|left"
                    android:text="￥290.00"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="x1"
                    android:textColor="#000" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/gray_lines" />

        <TextView
            android:id="@+id/tv_isreturn"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="52dp"
            android:background="@drawable/edit_shape"
            android:gravity="center"
            android:text="审核中"
             />

        <ImageView
            android:id="@+id/iv_returns"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/tv_isreturn"
            android:layout_alignParentBottom="true"
            android:src="@drawable/img_returnsbg" />

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_margin="8dp"
        android:background="@color/gray_lines" />

</LinearLayout>