<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_weixin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/btn_alipay"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            android:background="@drawable/shape_btn_background"
            android:onClick="weixinPay"
            android:text="微信支付"
            android:textColor="#3A97FF"
            android:layout_weight="1"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_alipay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_background"
            android:onClick="aliPay"
            android:text="支付宝"
            android:textColor="#3A97FF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/shape_btn_background"
            android:onClick="back"
            android:text="返回"
            android:textColor="#3A97FF"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
